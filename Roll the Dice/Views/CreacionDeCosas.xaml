<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Roll_the_Dice.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Roll_the_Dice.Views.CreacionDeCosas"
        mc:Ignorable="d"
        Title="CreacionDeCosas"  Height="450" Width="800" MinHeight="720" MinWidth="1280" WindowState="Maximized" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Roll the Dice;component/Images/background.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>

            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="50*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="347*"/>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>

        <Rectangle  Grid.Row="1" Grid.Column="1" Width="auto" Height="auto" Fill="#FF58777E" Margin="0,0.2,0.2,53.2" Grid.RowSpan="2"></Rectangle>
        <Rectangle  Grid.Row="1" Grid.Column="1" Width="auto" Height="auto" Fill="#FF58777E" Grid.ColumnSpan="2" Margin="313,0.2,0,53.2" Grid.RowSpan="2"></Rectangle>
        <Rectangle  Grid.Row="1" Grid.Column="3" Width="auto" Height="auto" Fill="#FF58777E" Grid.ColumnSpan="2" Margin="0,0.2,308.6,53.2" Grid.RowSpan="2"></Rectangle>
        <Rectangle  Grid.Row="1" Grid.Column="4" Width="auto" Height="auto" Fill="#FF58777E" Margin="0.2,0.2,-0.4,53.2" Grid.RowSpan="2"></Rectangle>
        <RadioButton Checked="arma_Checked" GroupName="crear" x:Name="arma" Grid.Row="1"  Width="auto" Height="auto" Content="ARMA" FontSize="40" Grid.Column="1" Margin="0,0.2,0.2,53.2" Grid.RowSpan="2"   />
        <RadioButton Checked="armadura_Checked" GroupName="crear" x:Name="armadura" Grid.Row="1" Grid.Column="1" Width="auto" Height="auto" Content="ARMADURA" FontSize="40" Grid.ColumnSpan="2" Margin="347,0.2,0,53.2" Grid.RowSpan="2" />
        <RadioButton Checked="npc_Checked" GroupName="crear" x:Name="npc" Grid.Row="1" Grid.Column="3" Width="auto" Height="auto" Content="NPC" FontSize="40" Grid.ColumnSpan="2" Margin="0,0.2,308.6,53.2" Grid.RowSpan="2" />
        <RadioButton Checked="monstruo_Checked" GroupName="crear" x:Name="monstruo" Grid.Row="1" Grid.Column="4" Width="auto" Height="auto" Content="MONSTRUO" FontSize="40" Margin="0.2,0.2,-0.4,53.2" Grid.RowSpan="2" />


        <Frame x:Name="creationFrame"  Height="auto" Width="auto" Grid.Row="2" Grid.ColumnSpan="5" Margin="0,53.4,-0.4,0.4" Grid.RowSpan="2"/>

    </Grid>
</Window>
