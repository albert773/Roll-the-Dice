            </ComboBox>
            <Viewbox Grid.Column="2"  Grid.ColumnSpan="4">
                <TextBox Style="{StaticResource MaterialDesignComboBoxEditableTextBox }"  TextWrapping="Wrap" Text="Havel era amigo de Gwyn y uno de los soldados del ejército del Gran Señor. Era un hombre resistente y fuerte, que animaba a sus hombres a lograr grandes cosas. Tanto él como sus hombres crearon armaduras talladas de piedra maciza y llevaban anillos que les permitían transportar una carga más pesada"  Width="4607" Height="724" Foreground="Black" FontFamily="Georgia"  TextAlignment="Left" FontSize="150" IsReadOnly = "True" />
            </Viewbox>
            <Viewbox Grid.Column="6" Grid.Row="3" Grid.ColumnSpan="1">
                <materialDesign:PackIcon x:Name="d" Kind="Wand" Width="Auto" Height="auto" VerticalAlignment="Center"  Foreground="Coral"/>
            </Viewbox>
        </Grid>

        <Viewbox Grid.Column="11" Grid.Row="13" Grid.ColumnSpan="1">
            <materialDesign:PackIcon x:Name="dadoGm" Kind="Dice6" Width="Auto" Height="auto" VerticalAlignment="Center" Foreground="Coral"/>
        </Viewbox>
        <Viewbox Grid.Column="14" Grid.Row="13">
            <TextBlock x:Name="Number" Foreground="White"/>
        </Viewbox>
        

        <Viewbox Grid.Column="1" Grid.Row="3" Visibility="Hidden">
            <materialDesign:PackIcon Kind="Run" Foreground="SandyBrown" />
