        <Viewbox Grid.Column="14" Grid.Row="11" Grid.ColumnSpan="1">
            <materialDesign:PackIcon x:Name="create" Kind="AddBox" Width="Auto" Height="auto" VerticalAlignment="Center" Foreground="Coral"/>
        </Viewbox>
        <Viewbox Grid.Column="14" Grid.Row="13">
            <materialDesign:PackIcon x:Name="edit" Kind="Edit" Width="Auto" Height="auto" VerticalAlignment="Center" Foreground="Coral"/>
        </Viewbox>
        <Viewbox Grid.Column="14" Grid.Row="9">
            <materialDesign:PackIcon x:Name="eliminate" Kind="Delete" Width="Auto" Height="Auto" VerticalAlignment="Center" Foreground="Coral"/>
        </Viewbox>

        <ComboBox  Grid.Row="1" Grid.Column="10" Grid.ColumnSpan="2"  Width="auto" Height="auto"   materialDesign:HintAssist.Hint="Dados" materialDesign:HintAssist.HintOpacity=".26" IsEditable="True" Foreground="Black" FontFamily="Georgia" FontWeight="Bold" FontSize="20"    >
