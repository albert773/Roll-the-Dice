        <Viewbox Grid.Column="14" Grid.Row="1" Grid.RowSpan="3">
            <materialDesign:PackIcon x:Name="person" Kind="Person" Width="Auto" Height="auto" VerticalAlignment="Center" Foreground="Coral"/>
